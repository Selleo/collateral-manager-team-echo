<p style="font-size: 30px;">
  <strong>Name:</strong>
  <%= @lead.name %>
</p>

<p style="font-size: 20px;">
  <strong>Description:</strong>
  <%= @lead.description %>
</p>
<%= link_to 'Tags', lead_tags_path(@lead) %> |
<%= link_to 'Edit', edit_lead_path(@lead) %> |
<%= link_to 'Back', leads_path %>

<h1 class="mt-3">BEST COLLATERALS FOR LEAD</h1>
<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Link</th>
    <th>Kind</th>
    <th>Compatibility points</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @collaterals.each_with_index do |collateral,index| %>
    <tr>
      <td><%= collateral.name %></td>
      <td><%= collateral.link %></td>
      <td><%= collateral.kind.humanize %></td>
      <td><%= @colls[index] %></td>
      <td><%= link_to 'Show', collateral %></td>
    </tr>
  <% end %>
  </tbody>
</table>

